<table class='table table-borderless'>
  <thead>
    <tr>
      <th></th>
      <th>コミュニティ名</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%# @user_groups = user.groups.page(params[:user_groups_page]).per(3) %>
  <tbody>
    <% user_groups.each do |group| %>
      <tr>
        <td class="text-center"><%= image_tag group.get_image(50, 50), class:"rounded-circle"; %></td>
        <td class="text-center"><%= link_to group.name, group_path(group.id) %></td>
        <td class="text-center"><%= group.group_users.count %>人</td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
  .pagination {
    text-align: center;
    width: 100%;
    margin: 20px auto;
    max-width: 70px;
  }
  .page-item.active .page-link {
    z-index: 3;
    color: #000;
    background-color: #FFFF66;
    border-color: #FFFF00;
  }
</style>


<%= paginate user_groups, :param_name => 'user_groups_page', remote: true %>

