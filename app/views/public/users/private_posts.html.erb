<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-4 mb-3'>
      <!--<h2><%#= @user.name %>さんの会員情報</h2>-->
      <%= render 'info', user: @user %>
    </div>

    <div class='col-md-8'>
      <h2 class="text-center"><%= @user.name %>さんの非公開投稿 <i class="fa-solid fa-heart-circle-check" aria-hidden="true"></i></h2>
      <% if @private_posts.exists? %>
        <!--<div id="favorite-posts">-->
        <div id="private-posts">
          <%= render 'public/users/private_posts', posts: @private_posts %>
        </div>
        <!--</div>-->
      <% else %>
        <div class="text-center mt-5">
          <h4 class="font-weight-bold">非公開投稿はまだありません</h4>
        </div>
      <% end %>
    </div>
  </div>
</div>