<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>会員情報</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">参加中コミュニティ</h2>
      <%#= render 'books/form', book: @book %>
    </div>
    <div class='col-md-6 offset-md-1'>
      
      <%= render 'public/announcements/announcement', announcements: @announcements %>をします!
      <%= link_to '宣言する!', new_user_announcement_path(@user.id) %>
      <h2><%= @user.name %>さんの投稿</h2>
      <%#= render 'books/index',books: @books %>
    </div>
  </div>
</div>
