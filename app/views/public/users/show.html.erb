<div class="text-right mr-5">
  <%= link_to new_post_path, class: 'btn btn-outline-warning' do %>
    <i class="fa-solid fa-pen-to-square"></i>
  <% end %>
</div>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>会員情報</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">参加中コミュニティ</h2>
      <%#= render 'books/form', book: @book %>
    </div>
    <div class='col-md-6 offset-md-1'>
      <div class="border rounded-circle p-2 text-center">
        私は今日、<%= render 'public/announcements/announcement', announcements: @announcements %>朝活をします!
        <div class="text-center">
          <% if @user.id == current_user.id %>
            <%= link_to '宣言する!', new_user_announcement_path(@user.id), class: 'btn btn-outline-warning' %>
          <% end %>
        </div>
      </div>
      <h2><%= @user.name %>さんの投稿</h2>
      <%#= render 'books/index',books: @books %>
    </div>
  </div>
</div>
