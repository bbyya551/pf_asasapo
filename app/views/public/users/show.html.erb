<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4'>
      <!--<h4 class="text-center title-color"><%#= @user.name %>さんの<br>プロフィール</h4>-->
      <%= render 'info', user: @user %>
      <h5 class="mt-3 text-center"><%= @user.name %>さんの<br>参加中コミュニティ</h5>
      <div id="paginate-user">
        <%= render 'user_groups', user_groups: @user_groups %>
      </div>
    </div>
    <div class='col-md-8'>

      <div class="wrap mt-3 mb-5">
        <ul id="tab-menu">
          <li><a href="#tab1" class="active"><%= @user.name %>さんの投稿</a></li>
          <li><a href="#tab2" class="">朝活達成状況</a></li>
          <li><a href="#tab3" class="">これまでの朝活宣言</a></li>
        </ul>

        <div id="tab-contents">
          <div id="tab1" class="tab">
              <!--<h2><＃= @user.name %>さんの投稿</h2>-->
            <div id="paginate-userposts">
              <%= render 'public/posts/index',posts: @posts %>
            </div>
          </div>
          <div id="tab2" class="tab">
              <div id="calendar">
                <%= render "public/users/calendar", announcements: @announcements, user: @user %>
              </div>
          </div>
          <div id="tab3" class="tab">
            <div class="scroll-list jscroll">
            <%= render 'public/announcements/announcetab', announcements: @announcements_offset1 %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
