<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-4 mb-3'>
      <!--<h4 class="text-center title-color"><%#= @user.name %>さんの<br>プロフィール</h4>-->
      <%= render 'info', user: @user %>
    </div>
    <div class='col-md-8'>

      <div class="wrap mt-3 mb-5">
        <ul id="tab-menu">
          <li><a href="#tab1" class="active"><%= @user.name.truncate(7) %>さんの投稿</a></li>
          <li><a href="#tab2" class="">朝活達成状況</a></li>
          <li><a href="#tab3" class="">これまでの朝活宣言</a></li>
        </ul>

        <div id="tab-contents">
          <div id="tab1" class="tab">
              <!--<h2><＃= @user.name %>さんの投稿</h2>-->
            <% if @posts.exists? %>
              <div id="paginate-userposts">
                <%= render 'public/posts/index',posts: @posts %>
              </div>
            <% else %>
              <% if @user.id == current_user.id %>
                <div class="text-center" id="menu">
                  <h4 class="font-weight-bold">投稿してみましょう!</h4>
                  <span class="mr-4">
                    <span class="new-post-btn">
                      <%= link_to new_post_path, class: 'btn btn-sm btn-outline-warning' do %>
                        <i class="fa-solid fa-pen-to-square"></i>
                      <% end %>
                    </span>
                    <p class="arrow_box">新規投稿</p>
                  </span>
                </div>
              <% else %>
                <div class="text-center">
                  <h4 class="font-weight-bold">投稿はまだありません</h4>
                </div>
              <% end %>
            <% end %>
          </div>
          <div id="tab2" class="tab">
              <div id="calendar">
                <%= render "public/users/calendar", announcements: @announcements, user: @user %>
              </div>
          </div>
          <div id="tab3" class="tab">
            <div class="scroll-list jscroll">
            <%= render 'public/announcements/announcetab', announcements: @announcements_offset1 %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

