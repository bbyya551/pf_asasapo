<table class="table table-borderless">
  <thead>
    <tr>
      <th></th>
      <th class="text-center">名前</th>
      <th class="text-center">意気込み</th>
      <th class="text-center">趣味</th>
      <th></th></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(50, 50), class:"rounded-circle"; %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.introduction %>
        </td>
        <td>
          <%= user.hobby %>
        </td>
        <td>
          <%= render "public/relationships/btn", user: user %>
        </td>
        <td>
          <%= link_to "Show", user_path(user.id), class: 'btn btn-outline-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
<%= paginate users, :param_name => 'users_page' %>