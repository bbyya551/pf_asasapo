<table class="table table-borderless">
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>自己紹介文</th>
      <th>趣味</th>
      <th></th></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(50, 50), class:"rounded-circle"; %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.introduction %>
        </td>
        <td>
          <%= user.hobby %>
        </td>
        <td>
          <%= render "public/relationships/btn", user: user %>
        </td>
        <td>
          <%= link_to "Show", user_path(user.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
<%= paginate users, :param_name => 'users_page' %>