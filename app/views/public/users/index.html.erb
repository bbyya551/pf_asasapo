<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4'>
      <h2><%= @user.name %>さんの会員情報</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3"><%= @user.name %>さんの参加中コミュニティ</h2>
      <%= render 'public/users/user_groups', user: @user %>
    </div>
    <div class='col-md-7 offset-md-1'>
      <div><%= link_to "コミュニティを作成", new_group_path %> | <%= link_to "コミュニティ一覧", groups_path %></div>
      <h2>会員一覧</h2>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>
