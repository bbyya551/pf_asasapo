<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>プロフィール編集</h2>
    <%= form_with model: [:public, @user], url: user_path(@user.id), method: :patch, local: true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>
      <!--<div class="form-group">-->
      <!--  <%#= f.label :image %>-->
      <!--  <%#= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>-->
      <!--</div>-->
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "自己紹介文" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :hobby, "趣味" %>
        <%= f.text_field :hobby, class: "form-control hobby" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-outline-warning' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
