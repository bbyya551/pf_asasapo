<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
  		<h2>投稿詳細</h2>
      <table class='table table-borderless'>
  		  <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @post.user.get_profile_image(50, 50) %>
              <%= link_to @post.user.name, user_path(@user.id) %>
            <% end %>
          </td>
        </tr>
      </table>

      <div class="card" style="max-width: 75rem;">
        <%= image_tag @post.get_post_image(100, 100), class: "card-image-top" %>
        <div class="card-body">
          <h4 class="card-title">
            <%= @post.title %>
          </h4>
          <h5><%= @post.created_at.strftime('%Y/%m/%d') %>  コメント数:<%= @post.post_comments.count %>  <%= render "public/favorites/btn", post: @post %></h5>
          <p class="card-text"><%= @post.body %></p>
          <% if @post.user == current_user %>
            <%= link_to "削除する", post_path(@post.id), method: :delete, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
      </div>

      <%= render "public/post_comments/index", post: @post %>
      <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>