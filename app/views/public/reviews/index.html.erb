<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="card">
        <div class="card-header font-weight-bold text-center">
         <%= link_to @group.name, group_path(@group), class: "font-weight-bold" %>
        </div>
        <div class="card-body">
          <div class="card-text d-flex align-items-center justify-content-center average-score">
            <div class="star-rating mb-2">
              <div class="star-rating-front" style="width: <%= @group.review_score_percentage %>%">★★★★★</div>
              <div class="star-rating-back">★★★★★</div>
            </div>
            <div class="average-score-display ml-3 pt-2">
              <%= @group.avg_score %>点（<%= @group.reviews.count %>件のレビュー
            </div>
          </div>
        </div>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th class="text-center">ユーザー</th>
            <th class="text-center"></th>
            <th class="text-center">点数</th>
            <th class="text-center"></th>
            <th class="text-center">内容</th>
            <th colspan="5"></th>
          </tr>
        </thead>

        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td class="text-center">
                <%= review.user.name %>
              </td>
              <td class="text-center">
              </td>
              <td class="text-center">
                <%= review.score %>
              </td>

              <td class="text-center">
                <!--<div class="card-text d-flex align-items-center justify-content-center average-score">-->
                <!--<div class="star-rating mb-2">-->
                <!--  <div class="star-rating-front" style="width: <%#= review.score*100 %> %">★★★★★</div>-->
                <!--  <div class="star-rating-back">★★★★★</div>-->
                <!--</div>-->

                <!--<div class="average-score-display ml-3 pt-2">-->
                <!--    <%#= @group.avg_score %>点（<%#= @group.reviews.count %>件のレビュー-->
                <!--  </div>-->
                <!--</div>-->
              </td>

              <td class="text-center">
                <%= review.content %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
