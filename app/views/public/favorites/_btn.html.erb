<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post.id), method: :delete, remote: true do %>
    <i class="fas fa-heart favorite" aria-hidden="true" style="color: red;"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
    <i class="fas fa-heart nonfavorite" aria-hidden="true"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>