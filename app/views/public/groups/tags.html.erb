<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4 mt-4 mb-3'>
      <!--<h2><%#= @user.name %>さんの<br>会員情報</h2>-->
      <%= render 'public/users/info', user: @user %>
    </div>
    <div class='col-md-8'>
      <h2 class="text-center">
        コミュニティタグ一覧 <i class="fa-solid fa-hashtag"></i>
      </h2>

      <% @tags.each do |tag| %>
        <span><%= link_to "#" + tag.name, search_path(content: tag.name, model: "tag", method: "perfect"), class: 'class: btn btn-lg btn-outline-warning' %></span>
      <% end %>
    </div>
  </div>
</div>