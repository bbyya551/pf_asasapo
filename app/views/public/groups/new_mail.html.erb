<div class='container'>
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h2 class="text-center text-dark bg-light p-4 mb-0">コミュニティ名:[<%= @group.name %>]<br>メンバーへのメール <i class="fa-solid fa-envelope-open-text"></i></h2>
    <div class="form-body bg-light p-4">
    <%= form_with url: group_send_mail_path(@group), method: :get, local: true do |f| %>
      <div class="form-group">
         <i class="fas fa-building"></i><%= f.label :title, "メールタイトル" %> <i class="fa-solid fa-pen-clip"></i>
        <%= f.text_field :mail_title, placeholder: "例): 読書会開催!", autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, "メール本文" %> <i class="fa-solid fa-pen-clip"></i>
        <%= f.text_area :mail_content, placeholder: "例): 明日、朝7時に場所は〇〇で開催します!", class: 'form-control' %>
      </div>
      <div>
        <%= f.submit '送信' %>
      </div>
    <% end %>
    </div>
    </div>
  </div>
</div>