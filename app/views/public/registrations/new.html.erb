<div class='container'>
  <div class='row no-gutters'>
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h2 class="text-center text-dark bg-light p-4 mb-0">新規登録 <i class="fa-solid fa-user-plus"></i></h2>
    <div class="form-body bg-light p-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <i class="fa-solid fa-circle-user"></i> <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control" %>
      </div>

      <div class="field">
        <i class="fa-regular fa-envelope"></i> <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <i class="fa-solid fa-lock" style="font-size: 16px; color: black;"></i> <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以内)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
      </div>

      <div class="field">
        <i class="fa-solid fa-lock" style="font-size: 16px; color: black;"></i> <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control" %>
      </div>

      <div class="actions mt-2">
        <%= f.submit "新規登録", class: 'btn btn-outline-success btn-block rounded-pill' %>
      </div>
    <% end %>
    <p class="text-center mt-3"><i class="fa-solid fa-check"></i> 会員登録がお済みの方 </p>
    <%= render "public/shared/links" %>
    </div>
    </div>
  </div>
</div>

<style>
  .fa-user-plus {
    color: #FFD700;
  }

  /*.form-body {*/
  /*  background-color: #FFFFCC;*/
  /*}*/
</style>

