<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card text-center m-5 shadow-sm" style="width: 22rem;">
        <div class="card-body text-center">

          <h2>新規登録</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :name %><br>
                <%= f.text_field :name, autofocus: true %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :password, "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以内)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="actions mt-2">
                <%= f.submit "新規登録" %>
              </div>
            <% end %>

            <%= render "public/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
