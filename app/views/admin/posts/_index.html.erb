<table class="table table-borderless">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th>投稿日時</th>
      <th></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.get_post_image(50, 50), class:"rounded-circle"; %>
        </td>
        <td>
          <%= link_to post.title, admin_post_path(post.id) %>
        </td>
        <td>
          <%= post.body.truncate(10) %>
        </td>
        <td>
          <%= post.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
          コメント数:<%= link_to post.post_comments.count, admin_post_post_comments_path(post.id) %>
        </td>
        <td>
          <%= link_to "削除する", admin_post_path(post.id), method: :delete, class: "btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>