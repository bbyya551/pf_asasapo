<table class="table table-borderless">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th>投稿日時</th>
      <th></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr class="hover-color">
        <td>
          <%= image_tag post.get_post_image(50, 50), class:"rounded-circle"; %>
        </td>
        <td>
          <%= link_to post.title, admin_post_path(post.id) %>
        </td>
        <td>
          <%= post.body.truncate(10) %>
        </td>
        <td>
          <%= post.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
          コメント数:<%= link_to post.post_comments.count, admin_post_post_comments_path(post.id) %>
        </td>
        <td>
          <%= link_to "削除する", admin_post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
  .hover-color {
    background-color: #FFFFFF;
    -webkit-transition: all 0.3s ease;
    -moz-transition: all 0.3s ease;
    -o-transition: all 0.3s ease;
    transition: all  0.3s ease;
  }

  .hover-color:hover {
    background-color: #dcdcdc;
    /*cursor: pointer;*/
  }
</style>
<%#= paginate posts %>