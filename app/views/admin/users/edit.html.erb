<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員ステータス変更</h2>
    <%= form_with model: [:admin, @user], url: admin_user_path(@user.id), method: :patch, local: true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.radio_button :is_deleted, "false" %>
        <%= f.label :is_deleted, "有効会員", value: false %>

        <%= f.radio_button :is_deleted, "true" %>
        <%= f.label :is_deleted, "利用停止", value: true %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-outline-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
