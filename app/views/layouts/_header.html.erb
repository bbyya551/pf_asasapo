<%#= stylesheet_link_tag "application", :media => "all" %>
<header class="shadow-sm bg-light">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><%#= image_tag('') %>ロゴ</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
       <% unless notice.nil? %>
        <p id="notice"><%= notice %></p>
       <% end %>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to notifications_path do %>
            <% if unchecked_notifications.any? %>
              <span class="fa-stack">
                <i class="far fa-bell fa-lg fa-stack-2x" style="font-size: 1.5rem;"></i>
                <i class="fas fa-circle n-circle fa-stack-1x"></i>
              </span>
            <% else %>
              <span class="fa-stack">
                <i class="far fa-bell fa-lg" style="font-size: 1.5em;"></i>
              </span>
            <% end %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "マイページ", user_path(current_user.id), method: :get, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to '投稿一覧', posts_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to 'コミュニティ一覧', groups_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to '会員一覧', users_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
        </li>

        <% elsif admin_signed_in? %>

        <li class="nav-item">
          <%= link_to "投稿一覧", admin_posts_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to '会員一覧', admin_users_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to 'コミュニティ一覧', admin_groups_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
        </li>

        <% else %>

        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to "ゲストログイン", new_user_session_path, class: 'nav-link text-dark' %>
        </li>

        <li class="nav-item">
          <%= link_to "管理者はこちら", new_admin_session_path, class: 'nav-link text-dark' %>
        </li>

        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>